<?xml version="1.0" ?>
<launch>

	<!-- Load the sensors that measured the internal wrench in the joints -->
	<arg name="internal_wrench" default="false"/>

	<!-- These are the arguments you can pass this launch file, for example paused:=true -->
        <arg name="sensors" default="false" />
        <arg name="robot_name" default="spot"/>
	<arg name="paused" default="true"/>
	<arg name="use_sim_time" default="true"/>
	<arg name="gui" default="true"/>
	<arg name="headless" default="false"/>
	<arg name="debug" default="false"/>
	<arg name="wb_empty_world" default="true"/>
	<arg name="world_name" default="empty.world"/>
        <arg name="task_period" default="0.004"/>
        <arg name="arm_enabled" default="false"/>
        <arg name="arm_name" default="kinova"/>
        <arg name="engine" default="ode"/>

        <arg if="$(arg wb_empty_world)" name="full_world_name" default="$(find wb_gazebo_resources)/worlds/$(arg world_name)"/>
	<arg unless="$(arg wb_empty_world)" name="full_world_name" default="worlds/$(arg world_name)"/>

	<!-- Set use_sim_time flag -->
	<group if="$(arg use_sim_time)">
		<param name="/use_sim_time" value="true" />
	</group>

	<!-- Set command arguments -->
	<arg unless="$(arg paused)" name="command_arg1" value=""/>
	<arg if="$(arg paused)" name="command_arg1" value="-u"/>
	<arg unless="$(arg headless)" name="command_arg2" value=""/>
	<arg if="$(arg headless)" name="command_arg2" value="-r"/>
	<arg unless="$(arg debug)" name="script_type" value="gzserver"/>
	<arg if="$(arg debug)" name="script_type" value="debug"/>
	
	<arg name="dynamic_engine" value="-e $(arg engine)"/>

	<!-- Start gazebo server-->
	<node name="gazebo" pkg="gazebo_ros" type="$(arg script_type)" respawn="false" output="screen"
		args="$(arg command_arg1) $(arg command_arg2) $(arg full_world_name) $(arg dynamic_engine)" />
	
	<!-- Start gazebo client -->
	<group if="$(arg gui)">
		<node name="gazebo_gui" pkg="gazebo_ros" type="gzclient" respawn="false" output="screen"/>
	</group>

        <!-- Send the robot urdf to parameter server -->
        <include file="$(find wolf_description_utils)/launch/upload.launch">
                <arg name="sensors" value="$(arg sensors)" />
                <arg name="task_period" value="$(arg task_period)" />
                <arg name="robot_name" value="$(arg robot_name)" />
		<arg name="internal_wrench" value="$(arg internal_wrench)" />
                <arg name="arm_name" value="$(arg arm_name)" />
                <arg name="arm_enabled" value="$(arg arm_enabled)" />
	</include>

	<!-- Spawn a robot into Gazebo -->
        <node name="spawn_spot_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param gazebo_robot_description -model $(arg robot_name) -z 0.55"/>
</launch>

